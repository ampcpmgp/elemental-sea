{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"files": {
		"ignore": ["**/*.svelte", "**/package.json"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExportsInTest": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}
